{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "rootDir": "src",
      "outDir": "dist",
      "strict": true,
      "esModuleInterop": true
    },
    "include": [
      "src/**/*.ts" // Include all TypeScript files under the "src" directory and its subdirectories
    ],
    "exclude": [
      "node_modules" // Exclude all files in the "node_modules" directory
    ]
  }
  